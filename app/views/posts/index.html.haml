-@meta_title = "Blog About Web Development, Ruby on Rails and Independent Consulting"
= render 'feed_link'

.row.view_selector
  .columns.large-offset-9.large-3.text-right
    =link_to post_titles_path, title: "List View", data: {view_style: ""} do 
      =fa_icon 'list'
    =link_to posts_path, title: "Blog View", data: {view_style: ""} do 
      =fa_icon 'file-text-o'

%section#posts
  - if collection.present?
    = render collection, :summary => false
    %hr
    = paginate collection
  - else
    No posts found.

.search
  %hr
  %h3 Search
  =javascript_include_tag "search"
  <gcse:searchbox-only resultsUrl="/results"></gcse:searchbox-only>
  %hr
